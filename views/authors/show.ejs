<h2><%= author.name %></h2>
<a href="/authors/<%= author.id %>/edit">Edit</a>

<%- include('../partials/deleteForm', { url: `/authors/${author.id}` }) %> <% if
(booksByAuthor.length > 0) {%>
<h2>Books by this author</h2>

<ul>
  <% booksByAuthor.forEach(book => { %>
  <div>
    <h3><%= book.title %></h3>
    <h4><%= book.publishedDate %></h4>
    <img
      height="150"
      width="100"
      src="<%= book.coverImagePath %>"
      alt="book cover"
    />
  </div>
  <%})%>
</ul>

<% } %>
