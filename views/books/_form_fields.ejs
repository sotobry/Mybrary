<div class="form-row">
  <div class="form-item">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= book.title %>" />
  </div>
  <div class="form-item">
    <label for="authorId">Author</label>
    <select name="authorId" id="author">
      <% authors.forEach(author => { %> <% if (author.id == book.authorId) { %>
      <option
        selected
        label="<%= author.name %>"
        value="<%= author.id %>"
      ></option>
      <% } else { %>
      <option label="<%= author.name %>" value="<%= author.id %>"></option>
      <% }%> <%}) %>
    </select>
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label for="publishedDate">Published date</label>
    <input
      type="date"
      id="publishedDate"
      name="publishedDate"
      value="<%= book.publishedDate == null ? '' : book.publishedDate.toISOString().split('T')[0] %>"
    />
  </div>
  <div class="form-item">
    <label for="pageCount">Page Count</label>
    <input
      type="number"
      min="1"
      id="pageCount"
      name="pageCount"
      value="<%= book.pageCount %>"
    />
  </div>
</div>

<div class="form-row">
  <div class="form-item form-item-no-grow">
    <label for="cover">Cover</label>
    <input type="file" id="cover" class="filepond" name="cover" />
  </div>
  <div class="form-item">
    <label for="description">Description</label>
    <textarea id="description" name="description">
      <%= book.description %>
    </textarea>
  </div>
</div>
