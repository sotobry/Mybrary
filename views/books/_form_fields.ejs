<label for="title">Title</label>
<input type="text" id="title" name="title" value="<%= book.title %>" />
<br />
<label for="authorId">Author</label>
<select name="authorId" id="author">
  <% authors.forEach(author => { %> <% if (author.id == book.authorId) { %>
  <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
  <% } else { %>
  <option label="<%= author.name %>" value="<%= author.id %>"></option>
  <% }%> <%}) %>
</select>
<br />
<label for="publishedDate">Published date</label>
<input
  type="date"
  id="publishedDate"
  name="publishedDate"
  value="<%= book.publishedDate == null ? '' : book.publishedDate.toISOString().split('T')[0] %>"
/>
<br />
<label for="pageCount">Page Count</label>
<input
  type="number"
  min="1"
  id="pageCount"
  name="pageCount"
  value="<%= book.pageCount %>"
/>
<br />
<label for="cover">Cover</label>
<input type="file" id="cover" class="filepond" name="cover" />
<br />
<label for="description">Description</label>
<textarea id="description" name="description">
  <%= book.description %>
</textarea>
